<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="account-management-grid" title="Account management list" model="com.axelor.apps.account.db.AccountManagement">
    	<field name="typeSelect" />
        <field name="company" form-view="company-form" grid-view="company-grid"/>
		<field name="saleAccount" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
        <field name="purchaseAccount" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
		<field name="cashAccount" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
		<field name="analyticDistributionTemplate" if-module="axelor-account" if="__config__.app.isApp('account')" />
    </grid>
    
    <grid name="account-management-product-grid" title="Account managements" model="com.axelor.apps.account.db.AccountManagement">
        <field name="company" form-view="company-form" grid-view="company-grid"/>
		<field name="saleAccount" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
		<field name="saleTax" form-view="tax-form" grid-view="tax-grid"/>
        <field name="purchaseAccount" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
        <field name="purchaseTax" form-view="tax-form" grid-view="tax-grid"/>
        <field name="analyticDistributionTemplate" if-module="axelor-account" if="__config__.app.isApp('account')" />
    </grid>
    
	<form name="account-management-product-form" title="Account management" model="com.axelor.apps.account.db.AccountManagement"  
	onNew="action-account-management-record-product,action-account-management-attrs-hide-sale" onLoad="action-account-management-attrs-hide-sale" width="large">
		<panel name="main">
			<field name="typeSelect" hidden="true"/>
		   	<field name="company" widget="SuggestBox" form-view="company-form" onChange="action-group-account-account-management-onchange-common" grid-view="company-grid"/>
		   	<field name="purchaseAccount" domain="self.company = :company AND self.accountType.technicalTypeSelect = 'charge'" onChange="action-group-account-account-management-onchange-common" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
		   	<field name="saleAccount" domain="self.company = :company AND self.accountType.technicalTypeSelect = 'income'" onChange="action-group-account-account-management-onchange-common" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
			<field name="analyticDistributionTemplate" canNew="true" if-module="axelor-account" if="__config__.app.isApp('account')" />
		</panel>
		<panel name="taxPage" title="Tax">
			<field name="purchaseTax" form-view="tax-form" grid-view="tax-grid"/>
			<field name="saleTax" form-view="tax-form" grid-view="tax-grid"/>
		</panel>
	</form>
	
	<form name="account-management-form" title="Account management" model="com.axelor.apps.account.db.AccountManagement"    
	onNew="action-account-management-record-default" width="large">
		<panel name="main">
			<field name="typeSelect"/>
			<field name="company" widget="SuggestBox" onChange="action-group-account-account-management-onchange-common" form-view="company-form" grid-view="company-grid"/>
			<panel colSpan="12" showIf="typeSelect == 1">
				<field name="purchaseAccount" onChange="action-group-account-account-management-onchange-common" domain="self.company = :company AND self.accountType.technicalTypeSelect = 'charge'" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
				<field name="saleAccount" onChange="action-group-account-account-management-onchange-common" domain="self.company = :company AND self.accountType.technicalTypeSelect = 'income'" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
			</panel>
			<panel colSpan="12" showIf="typeSelect == 3">
				<field name="cashAccount" onChange="action-group-account-account-management-onchange-common" domain="self.company = :company AND self.accountType.technicalTypeSelect = 'cash'" if-module="axelor-account" form-view="account-form" grid-view="account-grid" if="__config__.app.isApp('account')" />
			</panel>
			<field name="analyticDistributionTemplate" canNew="true" if-module="axelor-account" if="__config__.app.isApp('account')" />
		</panel>
		
		<panel name="productPage" title="Product" showIf="typeSelect == 1">
			<field name="product" canEdit="false" colSpan="12" form-view="product-form" grid-view="product-grid"/>
		</panel>
		
		<panel name="taxPage" title="Tax" hideIf="typeSelect == 3">
			<field name="purchaseTax" form-view="tax-form" grid-view="tax-grid"/>
			<field name="saleTax" form-view="tax-form" grid-view="tax-grid"/>
		</panel>
		
		<panel name="paymentModePage" showIf="typeSelect == 3" title="Payment mode">
		  <field name="paymentMode" form-view="payment-mode-form" grid-view="payment-mode-grid" />
		  <field name="journal" domain="self.company = :company AND self.statusSelect = 1" form-view="journal-form" grid-view="journal-grid"/>
		  <field name="bankDetails" form-view="bank-details-form" grid-view="bank-details-grid" onSelect="action-account-management-attrs-bank-details-domain" />
		  <field name="sequence" domain="self.company = :company" canNew="true" form-view="sequence-form" grid-view="sequence-grid"/>
		</panel>
	</form>
    
    
    <!-- ACTION RECORD -->
    <action-record name="action-account-management-record-default" model="com.axelor.apps.account.db.AccountManagement">
        <field name="company"  expr="eval:__user__.activeCompany" if="__user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__(Company).all().fetchOne()" if="__user__.activeCompany == null &amp;&amp; __repo__(Company).all().fetch().size == 1"/>
    </action-record>
    
	<action-record name="action-account-management-record-product" model="com.axelor.apps.account.db.AccountManagement">
        <field name="typeSelect" expr="eval: 1"/>
        <field name="company"  expr="eval:__user__.activeCompany" if="__user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__(Company).all().fetchOne()" if="__user__.activeCompany == null &amp;&amp; __repo__(Company).all().fetch().size == 1"/>
    </action-record>
    
    <action-attrs name="action-account-management-attrs-hide-sale">
    	<attribute name="hidden" for="saleAccount" expr="eval: !_parent?.sellable || _parent?.expense" if="_parent?._model == 'com.axelor.apps.base.db.Partner'"/>
    	<attribute name="hidden" for="saleTax" expr="eval: !_parent?.sellable || _parent?.expense" if="_parent?._model == 'com.axelor.apps.base.db.Partner'"/>
    	<attribute name="hidden" for="saleAccount" expr="eval: !_parent?._parent?.sellable || _parent?._parent?.expense" if="!_parent?._model == 'com.axelor.apps.base.db.Partner'"/>
    	<attribute name="hidden" for="saleTax" expr="eval: !_parent?._parent?.sellable || _parent?._parent?.expense" if="!_parent?._model == 'com.axelor.apps.base.db.Partner'"/>
    </action-attrs>

    <action-attrs name="action-account-management-attrs-bank-details-domain">
        <attribute name="domain" expr="eval: &quot;self.id IN (${company?.bankDetailsSet?.collect{it.id}.join(',')},${company?.defaultBankDetails?.id}) AND self.active = true&quot;" for="bankDetails"
            if="company?.bankDetailsSet ?: false"/>
        <attribute name="domain" expr="eval: &quot;self.id = ${company?.defaultBankDetails?.id} AND self.active = true&quot;" for="bankDetails"
            if="!company?.bankDetailsSet"/>
    </action-attrs>

</object-views>